cmake_minimum_required(VERSION 2.8.2)

project(gendnn-download NONE)

include(ExternalProject)
ExternalProject_Add(gendnn
  GIT_REPOSITORY   https://github.com/necla-ml/gen-dnn.git
  GIT_TAG           master
  SOURCE_DIR        "${CMAKE_CURRENT_BINARY_DIR}/gen-dnn-src"
  BINARY_DIR        "${CMAKE_CURRENT_BINARY_DIR}/gen-dnn-build"
  CONFIGURE_COMMAND ""
  CMAKE_ARGS        -DDNNL_USE_MKL=ML -DDNNL_LIBRARY_TYPE=STATIC -G \"Unix Makefiles\"
  BUILD_COMMAND     ""
  INSTALL_COMMAND   ""
  TEST_COMMAND      ""
)
